@model IEnumerable<Merkato.Lib.ViewModels.AgentAvailabilityDetailsViewModel>

@{
    ViewData["Title"] = "Index";
}


<div class="col-md-12">
    <div class="panel panel-primary panel-table">
        <div class="panel-heading">
            <div class="row">
                <div class="col col-xs-6">
                    <h3 class="panel-title">Agent Availability</h3>
                </div>
                <div class="col col-xs-6 text-right">
                    <a asp-action="Create" class="btn btn-sm btn-default btn-create">Create New</a>
                </div>
            </div>
        </div>
        <div class="panel-body">
            <table id="datatable" class="table table-striped table-bordered table-list">
                <thead>
                    <tr class="btn-primary">
                        <th>
                            BatchNo
                        </th>
                        <th>
                            Agent Name
                        </th>
                        <th>
                            Date
                        </th>
                        <th>
                            First Shift
                        </th>
                        <th>
                            Second Shift
                        </th>
                        <th>
                            Third Shift
                        </th>
                        <th>
                            Fourth Shift
                        </th>
                        <th></th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>
                                @Html.DisplayFor(modelItem => item.BatchNo)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.AgentName)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.DateString)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.IsFirstShiftActive)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.IsSecondShiftActive)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.IsThirdShiftActive)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.IsFourthShiftActive)
                            </td>
                            <td>
                                <a title="Edit" asp-action="Edit" asp-route-id="@item.Id"><i class="fa fa-pencil"></i></a> |
                                <a title="Details" class="btn btn-xs btn-info" asp-action="Details" asp-route-id="@item.Id"><i class="glyphicon glyphicon-info-sign"></i></a>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
        <div class="panel-footer">
            <div class="row">

            </div>
        </div>
    </div>
</div>


