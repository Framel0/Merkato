@model Merkato.Lib.ViewModels.BankBranchViewModel

@{
    ViewData["Title"] = "Details";
}

<div class="col-md-6">
    <div class="box box-info">
        <div class="box-header with-border">
            <h3 class="box-title">Details</h3>
        </div>
        <!-- /.box-header -->
        <!-- form start -->
        <form class="form-horizontal" asp-action="Details">
            <div class="box-body">
                <div class="col-md-10">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    <input type="hidden" asp-for="Id" />
                    <div class="form-group">
                        <label asp-for="Code">Code</label>
                        <input asp-for="Code" class="form-control" readonly="readonly" placeholder="Code" />
                        <span asp-validation-for="Code" class="text-danger"></span>
                    </div>

                    <div class="form-group">
                        <label asp-for="Name">Name</label>
                        <input asp-for="Name" class="form-control" readonly="readonly" placeholder="Code" />
                        <span asp-validation-for="Name" class="text-danger"></span>
                    </div>
                    <div class="form-group hidden">
                        <label asp-for="BankId">Main Bank</label>
                        <input asp-for="BankId" class="form-control" placeholder="Code" />
                        <span asp-validation-for="BankId" class="text-danger"></span>
                    </div>
                </div>
            </div>
            <!-- /.box-body -->
            <div class="box-footer">
                <a asp-action="Edit" asp-route-id="@Model.Id">Edit</a>  |
                <a class="cm-fat-cursor" data-toggle="modal" data-target="#exampleModal">Delete</a>  |
                <a asp-action="Index">Back to List</a>
            </div>
            <!-- /.box-footer -->
        </form>
    </div>
</div>



<div class="modal fade" id="exampleModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
    <div class="modal-dialog" role="document">
        <form asp-controller="BankBranches" asp-action="Delete" asp-route-Id="@Model.Id">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title" id="exampleModalLabel">
                        <span class="text-capitalize">Delete</span>
                        <span class="pull-right">
                            <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                                <span aria-hidden="true">&times;</span>
                            </button>
                        </span>
                    </h5>

                </div>
                <div class="modal-body">

                    <div class="text-bold">
                        Do you want to delete this item ?
                    </div>

                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-dismiss="modal">No</button>
                    <button type="submit" class="btn btn-primary">Yes</button>
                </div>
            </div>
        </form>
    </div>
</div>
