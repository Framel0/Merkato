@model Merkato.Lib.ViewModels.BankBranchViewModel
@{
    ViewData["Title"] = "Edit";
}

<div class="col-md-6">
    <div class="box box-info">
        <div class="box-header with-border">
            <h3 class="box-title">Edit Bank Branch</h3>
        </div>
        <!-- /.box-header -->
        <!-- form start -->
        <form class="form-horizontal" asp-action="Edit">
            <div class="box-body">
                <div class="col-md-10">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    <div class="form-group">
                        <label asp-for="Code">Code</label>
                        <input asp-for="Code" class="form-control" placeholder="Code" />
                        <span asp-validation-for="Code" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="Name">Name</label>
                        <input asp-for="Name" class="form-control" placeholder="Name" />
                        <span asp-validation-for="Name" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="BankId">Main Bank</label>
                        <select asp-for="BankId" asp-items="@Model.BankList" class="form-control">
                            <option>Please select one</option>
                        </select>
                        <span asp-validation-for="BankId" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="Active">Status</label>
                        <select asp-for="Active" asp-items="@Model.ActiveList" class="form-control">
                            <option>Please select one</option>
                        </select>
                        <span asp-validation-for="Active" class="text-danger"></span>
                    </div>
                </div>
                </div>
                <!-- /.box-body -->
                <div class="box-footer">
                    <a class="btn btn-default" asp-action="Index">Back to List</a>
                    <button type="submit" class="btn btn-info pull-right">Save</button>
                </div>
                <!-- /.box-footer -->
        </form>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
