@model IEnumerable<Merkato.Lib.ViewModels.MechanismViewModel>

@{
    ViewData["Title"] = "Index";
}

<div class="col-md-10">
    <div class="col-md-12">
        <div class="panel panel-primary panel-table">
            <div class="panel-heading">
                <div class="row">
                    <div class="col col-xs-6">
                        <h3 class="panel-title">@ViewBag.ClientName / Mechanisms</h3>
                    </div>
                    <div class="col col-xs-6 text-right">
                        <a asp-action="Create" asp-controller="Mechanism" asp-route-id="@ViewBag.CLientId" class="btn btn-sm btn-default btn-create">Create New</a>
                    </div>
                </div>
            </div>
            <div class="panel-body">
                <table id="datatable" class="table table-striped table-bordered table-list">
                    <thead>
                        <tr class="btn-primary">
                        <tr>
                            <th>
                                Name
                            </th>
                            <th>
                                Price
                            </th>
                            <th></th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                        <tr>
                            <td>
                                @Html.DisplayFor(modelItem => item.Name)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.Price)
                            </td>
                            <td>
                                <a class="btn btn-xs btn-primary" asp-action="Index" asp-controller="ProductMechanism" asp-route-id="@item.Id">Product</a>|
                                <a title="Edit" asp-action="Edit" asp-route-id="@item.Id"><i class="fa fa-pencil"></i></a> |
                                <a title="Details" class="btn btn-xs btn-info" asp-action="Details" asp-route-id="@item.Id"><i class="glyphicon glyphicon-info-sign"></i></a> |
                                <a title="delete" class="btn btn-xs btn-danger" asp-action="Delete" asp-route-id="@item.Id"><i class="fa fa-remove"></i></a>
                            </td>
                        </tr>
                        }
                    </tbody>
                </table>
            </div>
            <div class="panel-footer panel-primary">
                <div class="row">
                    <a class="btn btn-default btn-link" asp-action="Index" asp-controller="Clients"><b>Back to List</b></a>
                </div>
            </div>
        </div>
    </div>
</div>
