@model Merkato.Lib.ViewModels.TrainingDefinitionViewModel
@{
    ViewData["Title"] = "Edit";
}


<div class="col-md-6">
    <div class="box box-info">
        <div class="box-header with-border">
            <h3 class="box-title">Edit Training Definition</h3>
        </div>
        <!-- /.box-header -->
        <!-- form start -->
        <form class="form-horizontal" asp-action="Edit" enctype="multipart/form-data">
            <div class="box-body">
                <div class="col-md-10">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    <div class="form-group">
                        <label asp-for="TrainingName" class="control-label">Name</label>
                        <input asp-for="TrainingName" class="form-control" />
                        <span asp-validation-for="TrainingName" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="JobId">Job Title</label>
                        <select asp-for="JobId" asp-items="@Model.JobList" class="form-control">
                            <option>Please select one</option>
                        </select>
                        <span asp-validation-for="JobId" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <input asp-for="TraningMaterial" id="TraningMaterial" hidden="hidden">
                        <label for="TraningMaterial">Traning Material</label>
                        <input asp-for="TraningMaterial" type="file" id="TraningMaterial_" name="file">
                        <p class="help-block">TraningMaterial</p>
                    </div>
                </div>
            </div>
            <!-- /.box-body -->
            <div class="box-footer">
                <a class="btn btn-default" asp-action="Index">Back to List</a>
                <button type="submit" class="btn btn-info pull-right">Save</button>
            </div>
            <!-- /.box-footer -->
        </form>
    </div>
</div>


