@model IEnumerable<Merkato.Lib.Models.Batch>

@{
    ViewData["Title"] = "Index";
}

<div class="col-md-12">
    <div class="panel panel-primary panel-table">
        <div class="panel-heading">
            <div class="row">
                <div class="col col-xs-6">
                    <h3 class="panel-title">Batch List</h3>
                </div>
                <div class="col col-xs-6 text-right">
                </div>
            </div>
        </div>
        <div class="panel-body">
            <table id="datatable" class="table table-striped table-bordered table-list">
                <thead>
                    <tr class="btn-primary">
                        <th>
                            BatchNo
                        </th>
                        <th>
                            ActivityID
                        </th>
                        <th>
                            Client 
                        </th>
                        <th>
                            Start Date
                        </th>
                        <th>
                            End Date
                        </th>
                        <th></th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                    <tr>
                        <td>
                            @Html.DisplayFor(modelItem => item.BatchNo)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.ActivityId)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.ClientName)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.StartDate)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.EndDate)
                        </td>
                        <td>
                            <a class="btn btn-xs btn-primary" asp-action="InvoiceList" asp-controller="clientAccounting" asp-route-id="@item.Id">Invoice</a>
                        </td>
                    </tr>
                    }
                </tbody>
            </table>
        </div>
        <div class="panel-footer">
            <div class="row">

            </div>
        </div>
    </div>
</div>


