@model Merkato.Lib.ViewModels.ClientRequestViewModel

@{
    ViewData["Title"] = "Create";
}

<!--Data Range Picker-->
<link rel="stylesheet" type="text/css" href="~/Scripts/daterangepicker/daterangepicker.css" />
<!--Date Range Picker-->


<div class="col-md-12">
    <div class="box box-info">
        <div class="box-header with-border">
            <h3 class="box-title">Create Request</h3>
        </div>
        <!-- /.box-header -->
        <!-- form start -->
        <form class="form-horizontal" id="requestForm" asp-action="Create">
            <div class="box-body">
                <div class="col-md-4">
                    <div class="col-md-11">
                        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                        @if (!User.IsInRole("Client"))
                        {

                            <div class="form-group">
                                <label asp-for="ClientId">Client</label>
                                <select asp-for="ClientId" asp-items="@Model.ClientList" class="form-control">
                                    <option>Please select one</option>
                                </select>
                                <span asp-validation-for="ClientId" class="text-danger"></span>
                            </div>
                        }
                        <div class="form-group">
                            <label asp-for="OutletId">Outlet</label>
                            <select asp-for="OutletId" asp-items="@Model.OutletList" class="form-control">
                                <option>Please select one</option>
                            </select>
                            <span asp-validation-for="OutletId" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <label asp-for="MechanismId">Mechanism</label>
                            <select asp-for="MechanismId" asp-items="@Model.MechanismList" class="form-control">
                                <option>Please select one</option>
                            </select>
                            <span asp-validation-for="MechanismList" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <label asp-for="NbAgentShift1" class="control-label">Number of Shift One Agents</label>
                            <input asp-for="NbAgentShift1" class="form-control" />
                            <span asp-validation-for="NbAgentShift1" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <label asp-for="NbAgentShift2" class="control-label">Number of Shift Two Agents</label>
                            <input asp-for="NbAgentShift2" class="form-control" />
                            <span asp-validation-for="NbAgentShift2" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <label asp-for="NbAgentShift3" class="control-label">Number of Shift Three Agents</label>
                            <input asp-for="NbAgentShift3" class="form-control" />
                            <span asp-validation-for="NbAgentShift3" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <label asp-for="NbAgentShift4" class="control-label">Number of Shift Four Agents</label>
                            <input asp-for="NbAgentShift4" class="form-control" />
                            <span asp-validation-for="NbAgentShift4" class="text-danger"></span>
                        </div>
                    </div>
                </div>
                <div class="col-md-3">
                    <div class="col-md-11">
                        <div class="form-group">
                            <label asp-for="GradeId">Grade</label>
                            <select asp-for="GradeId" asp-items="@Model.GradeList" class="form-control">
                                <option>Please select one</option>
                            </select>
                            <span asp-validation-for="GradeId" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <label asp-for="GenderId">Gender</label>
                            <select asp-for="GenderId" asp-items="@Model.GenderList" class="form-control">
                                <option>Please select one</option>
                            </select>
                            <span asp-validation-for="GenderId" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <label asp-for="SkillId">Skill</label>
                            <select asp-for="SkillId" asp-items="@Model.SkillsList" class="form-control">
                                <option>Please select one</option>
                            </select>
                            <span asp-validation-for="SkillId" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <label asp-for="LanguageId">Language</label>
                            <select asp-for="LanguageId" asp-items="@Model.LanguageList" class="form-control">
                                <option>Please select one</option>
                            </select>
                            <span asp-validation-for="LanguageId" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <label asp-for="Age" class="control-label">Age</label>
                            <input asp-for="Age" class="form-control" />
                            <span asp-validation-for="Age" class="text-danger"></span>
                        </div>
                    </div>
                </div>
                <div class="col-md-5">
                    <div class="form-group">
                        <label asp-for="DateRangeSelector" class="control-label">Date Range</label>
                        <input asp-for="DateRangeSelector" id="DateRangeSelector" name="daterange" class="form-control" />
                        <span asp-validation-for="DateRange" class="text-danger"></span>
                    </div>
                    <div class="form-group hidden">
                        <label asp-for="Days" class="control-label">Days</label>
                        <input asp-for="Days" id="Days" class="form-control" readonly="readonly" />
                        <span asp-validation-for="Days" class="text-danger"></span>
                    </div>
                    <div class="form-group hidden">
                        <label asp-for="DateRange" class="control-label">DateRange</label>
                        <input asp-for="DateRange" id="DateRange" class="form-control" readonly="readonly" />
                        <span asp-validation-for="DateRange" class="text-danger"></span>
                    </div>
                    <div class="form-group hidden">
                        <label asp-for="StartDateString" class="control-label">StartDate</label>
                        <input asp-for="StartDateString" id="StartDate" class="form-control" readonly="readonly" />
                        <span asp-validation-for="StartDate" class="text-danger"></span>
                    </div>
                    <div class="form-group hidden">
                        <label asp-for="EndDateString" class="control-label">EndDate</label>
                        <input asp-for="EndDateString" id="EndDate" class="form-control" readonly="readonly" />
                        <span asp-validation-for="EndDate" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <span><b>Select Days</b></span>
                        <ul class="todo-list">
                            <li>
                                <!-- drag handle -->
                                <label class="col-form-label col-sm-2">
                                    Monday
                                </label>
                                <!-- checkbox -->
                                <input type="checkbox" id="Mon" value="">
                            </li>
                            <li>
                                <!-- drag handle -->
                                <label class="col-form-label col-sm-2">
                                    Tuesday
                                </label>
                                <!-- checkbox -->
                                <input type="checkbox" id="Tue" value="">
                            </li>
                            <li>
                                <!-- drag handle -->
                                <label class="col-form-label col-sm-2">
                                    Wednesday
                                </label>
                                <!-- checkbox -->
                                <input type="checkbox" id="Wed" value="">
                            </li>
                            <li>
                                <!-- drag handle -->
                                <label class="col-form-label col-sm-2">
                                    Thursday
                                </label>
                                <!-- checkbox -->
                                <input type="checkbox" id="Thu" value="">
                            </li>
                            <li>
                                <!-- drag handle -->
                                <label class="col-form-label col-sm-2">
                                    Friday
                                </label>
                                <!-- checkbox -->
                                <input type="checkbox" id="Fri" value="">
                            </li>
                            <li>
                                <!-- drag handle -->
                                <label class="col-form-label col-sm-2">
                                    Saturday
                                </label>
                                <!-- checkbox -->
                                <input type="checkbox" id="Sat" value="">
                            </li>
                            <li>
                                <!-- drag handle -->
                                <label class="col-form-label col-sm-2">
                                    Sunday
                                </label>
                                <!-- checkbox -->
                                <input type="checkbox" id="Sun" value="">
                            </li>
                        </ul>
                    </div>
                </div>
            </div>
            <!-- /.box-body -->
            <div class="box-footer">
                <a class="btn btn-default" asp-action="CLientRequest">Back to List</a>
                <button id="subimit" data-toggle="modal" data-target="#exampleModal" class="btn btn-info pull-right">Save</button>
                @*<button type="submit" id="subimit" class="btn btn-info pull-right">Save</button>*@
            </div>
            <!-- /.box-footer -->
        </form>
    </div>
</div>


<div class="modal fade" id="exampleModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
    <div class="modal-dialog" role="document">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title" id="exampleModalLabel">
                        <span class="text-capitalize">Confirm Details</span>
                        <span class="pull-right">
                            <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                                <span aria-hidden="true">&times;</span>
                            </button>
                        </span>
                    </h5>

                </div>
                <div class="modal-body">

                    <div class="text-bold">
                        <p>You are about to create a request.</p>
                        <p>Do you want to proceed?</p>
                    </div>

                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-dismiss="modal">No</button>
                    <button type="submit" class="btn btn-primary">Yes</button>
                </div>
            </div>
    </div>
</div>


@section Scripts{
    <script type="text/javascript" src="~/Scripts/daterangepicker/moment.min.js"></script>
    <script type="text/javascript" src="~/Scripts/daterangepicker/daterangepicker.js"></script>

    <script>
        $(function () {
            $('input[name="daterange"]').daterangepicker({
                opens: 'left'
            }, function (start, end, label) {
                console.log("A new date selection was made: " + start.format('YYYY-MM-DD') + ' to ' + end.format('YYYY-MM-DD'));

                $("#DateRangeSelector").change(function () {
                    var selectedOption = $("#DateRangeSelector").val();
                    $('#DateRange').val(selectedOption);
                    $('#StartDate').val(start.format('DD-MM-YYYY'));
                    $('#EndDate').val(end.format('DD-MM-YYYY'));
                });
            });
        });
    </script>
    <script>
        $("#subimit").click(function () {
            var days="";
            if (document.getElementById('Mon').checked) {
                days = "1";
            }
            if (document.getElementById('Tue').checked) {
                days = days + "2";
            }
            if (document.getElementById('Wed').checked) {
                days = days + "3";
            }
            if (document.getElementById('Thu').checked) {
                days = days + "4";
            }
            if (document.getElementById('Fri').checked) {
                days = days + "5";
            }
            if (document.getElementById('Sat').checked) {
                days = days + "6";
            }
            if (document.getElementById('Sun').checked) {
                days = days + "0";
            }
            $("#Days").val(days);
            console.log("Values" + $("#Days").val(days));
            console.log("The days choosed are " + days);

            if (days === "") {
                alert("Please select a day  !!!");
            }

        });
    </script>
}






