<form role="form">
    <div class="col-md-12">
        <div class="col-md-10">
            <div class="form-group">
                <label for="ProductId">Product</label>
                <select id="productId" data-bind="options:Products,
                        optionsText: 'productName',
                        optionsValue:'id', 
                        value: selectedProduct,
                        optionsCaption: 'Choose...'" class="form-control"></select>
            </div>

            <div class="form-group">
                <label for="Quantity">Quantity</label>
                <input id="Quantity" type="number" data-bind="value:Quantity" class="form-control"/>
            </div>
        </div>
        <div class="col-md-2"></div>
    </div>
        <input type="button" id="btnAddMechanism" class="btn btn-primary" data-bind="click: SaveProduct" value="Add" />
</form>
