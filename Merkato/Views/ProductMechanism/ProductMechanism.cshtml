@model IEnumerable<Merkato.Lib.Models.ProductMechanism>

@{
    ViewData["Title"] = "ProductMechanism";
}

<div class="box box-info">
    <div class="box-body">
        <hr />
        <div class="form-horizontal">
            <div class="col-md-12">
                <div class="panel panel-info">
                    <div class="panel-heading">
                        <div class="row">
                            <div class="col col-xs-6">
                                <h3 class="panel-title"><b>Create Mechanism</b></h3>
                            </div>
                        </div>
                    </div>
                    <div class="panel-body">
                        <div class="col-md-12">
                            <div class="col-md-6">
                                <div class="col-md-11">
                                    <div class="col-md-6">
                                        <div class="box box-info">
                                            @*<div class="box-header with-border">
                                                <h3 class="box-title">Create Bank</h3>
                                            </div>*@
                                            <!-- /.box-header -->
                                            <!-- form start -->
                                            <form class="form-horizontal" asp-action="Create">
                                                <div class="box-body">
                                                    <div class="col-md-10">
                                                    
                                                    </div>
                                                </div>
                                                <!-- /.box-body -->
                                                <div class="box-footer">
                                                    <a class="btn btn-default" asp-action="Index">Back to List</a>
                                                    <button type="submit" class="btn btn-info pull-right">Save</button>
                                                </div>
                                                <!-- /.box-footer -->
                                            </form>
                                        </div>
                                    </div>
                                </div>
                                <div class="col-md-1"></div>
                            </div>
                            <div class="col-md-6">
                                <div class="col-md-11">

                                </div>
                                <div class="col-md-1"></div>
                            </div>
                        </div>
                    </div>
                    <div class="panel-footer">
                        <div class="row">

                        </div>
                    </div>
                </div>
                <div class="panel panel-info">
                    <div class="panel-heading">
                        <div class="row">
                            <div class="col col-xs-6">
                                <h3 class="panel-title"><b>Mechanism List</b></h3>
                            </div>
                        </div>
                    </div>
                    <div class="panel-body">
                        <div class="col-md-12">
                            <div class="col-md-6">
                                <div class="col-md-11">
                                    <div class="col-md-10 col-md-offset-1">
                                        <div class="panel panel-primary panel-table">
                                            <div class="panel-heading">
                                                <div class="row">
                                                    <div class="col col-xs-6">
                                                        <h3 class="panel-title">Bank</h3>
                                                    </div>
                                                    <div class="col col-xs-6 text-right">
                                                        <a asp-action="Create" class="btn btn-sm btn-default btn-create">Create New</a>
                                                    </div>
                                                </div>
                                            </div>
                                            <div class="panel-body">
                                                <table id="datatable" class="table table-striped table-bordered table-list">
                                                    <thead>
                                                        <tr class="btn-primary">
                                                            <th>
                                                               Name
                                                            </th>
                                                            <th>
                                                                @Html.DisplayNameFor(model => model.Product)
                                                            </th>
                                                            <th></th>
                                                        </tr>
                                                    </thead>
                                                    <tbody>
                                                        @foreach (var item in Model)
                                                        {
                                                            <tr>
                                                                <td>
                                                                    @Html.DisplayFor(modelItem => item.Mechanism.Name)
                                                                </td>
                                                                <td>
                                                                    @Html.DisplayFor(modelItem => item.Product.ProductName)
                                                                </td>
                                                                <td>
                                                                    <a title="Edit" asp-action="Edit" asp-route-id="@item.Id"><i class="fa fa-pencil"></i></a> |
                                                                    <a title="Details" class="btn btn-xs btn-info" asp-action="Details" asp-route-id="@item.Id"><i class="glyphicon glyphicon-info-sign"></i></a> |
                                                                    <a title="delete" class="btn btn-xs btn-danger" asp-action="Delete" asp-route-id="@item.Id"><i class="fa fa-remove"></i></a>
                                                                </td>
                                                            </tr>
                                                        }
                                                    </tbody>
                                                </table>
                                            </div>
                                            <div class="panel-footer">
                                                <div class="row">

                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                                <div class="col-md-1">

                                </div>
                            </div>
                            <div class="col-md-6">

                            </div>
                        </div>
                    </div>
                    <div class="panel-footer">
                        <div class="row">

                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

