<table class="table table-striped table-bordered table-condensed">
    <thead>
        <tr>
            <th>Product</th>
            <th>Quantity</th>
            <th></th>
        </tr>
    </thead>

    <tbody data-bind="foreach:ProductsList">
        <tr>
            <td data-bind="text:productName"></td>
            <td data-bind="text:quantity"></td>
            <td><input data-bind="click:$root.DeleteProduct" type="button" class="btn btn-danger btn-xs" value="Delete" /></td>
        </tr>
    </tbody>
</table>

    <br />

    <div class="col col-xs-6 text-left">
        <input type="button" data-bind="click:$root.LoadProductsList" class="btn btn-default" id="btnGetMechanisms" value="Refresh" />
    </div>
