@model IEnumerable<Merkato.Lib.ViewModels.AgentSmallViewModel>

@{
    ViewData["Title"] = "Index";
}

<div class="col-md-12">
    <div class="panel panel-primary panel-table">
        <div class="panel-heading">
            <div class="row">
                <div class="col col-xs-6">
                    <h3 class="panel-title">Agent</h3>
                </div>
                @if (!User.IsInRole("Agent"))
                {
                    <div class="col col-xs-6 text-right">
                        <a asp-action="Create" class="btn btn-sm btn-default btn-create">Create New</a>
                    </div>
                }
            </div>
        </div>
        <div class="panel-body">
            <table id="datatable" class="table table-striped table-bordered table-list">
                <thead>
                    <tr class="btn-primary">
                        <th>
                            Agent Code
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.FirstName)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.MiddleName)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.SurName)
                        </th>
                        <th>
                            Date of Birth
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.Gender)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.PhoneNo)
                        </th>
                        <th>
                            Email
                        </th>
                        @*<th>
                                Location
                            </th>*@
                        <th>
                            Agent Status
                        </th>
                        <th></th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>
                                @Html.DisplayFor(modelItem => item.EmpCode)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.FirstName)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.MiddleName)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.SurName)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.DOBString)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.GenderString)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.PhoneNo)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.PersonalEmail)
                            </td>
                            @*<td>
                                    @Html.DisplayFor(modelItem => item.LocationName)
                                </td>*@
                            <td>
                                @Html.DisplayFor(modelItem => item.StatusString)
                            </td>
                            <td>
                                <a class="btn btn-xs btn-primary" asp-action="AgentActivities" asp-controller="Agents" asp-route-id="@item.Id">Activities</a>|
                                <a title="Edit" asp-action="Edit" asp-route-id="@item.Id"><i class="fa fa-pencil"></i></a> |
                                <a title="Details" class="btn btn-xs btn-info" asp-action="Details" asp-route-id="@item.Id"><i class="glyphicon glyphicon-info-sign"></i></a> |
                                <a title="delete" class="btn btn-xs btn-danger" asp-action="Delete" asp-route-id="@item.Id"><i class="fa fa-remove"></i></a>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
        <div class="panel-footer">
            <div class="row">

            </div>
        </div>
    </div>
</div>



